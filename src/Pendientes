    function agregarAlCarrito(items) {
        setCartList([
        ...cartList,
        items
        ])
        
    }


    function agregarAlCarrito(items) {
        setItemCant(itemCant + items.count)
        setCartTotal(cartTotal + (items.itemDetail.precio * items.count))
        const buscaItem = cartList.find(itemCarrito => itemCarrito.itemDetail.id === items.itemDetail.id)       
        if (buscaItem) {
            buscaItem.count = buscaItem.count + items.count
        }
        else {
            setCartList(itemsAdded => [...itemsAdded, items])

        }
        
    }
